# Example environment variables for BLE RTLS prototype. Copy this file to `.env`
# and adjust the values as needed for your environment. These variables
# configure the database connection, MQTT broker, and authentication settings.

# PostgreSQL connection credentials
POSTGRES_USER=rtls
POSTGRES_PASSWORD=rtls
POSTGRES_DB=rtls

# Secret key for JWT token signing. Generate your own random string for production.
SECRET_KEY=supersecretkey

# Token lifetime in hours
TOKEN_LIFETIME_HOURS=8

# MQTT broker URL used by the API (ingestor and locator use host/port)
MQTT_BROKER_URL=mqtt://localhost:1883

# Host name or IP of the MQTT broker (used by ingestor)
MQTT_BROKER_HOST=mqtt
MQTT_BROKER_PORT=1883

# Locator algorithm parameters
TX_POWER_DBM_AT_1M=-77        # reference transmit power at 1 m (dBm)
PATH_LOSS_EXPONENT=2.3        # path loss exponent n used in logâ€‘distance model
MIN_ANCHORS=1                 # minimum required anchors for position calculation

# Retention periods (days)
RETENTION_SCANS_DAYS=7
RETENTION_POSITIONS_DAYS=30
RETENTION_EVENTS_DAYS=180
